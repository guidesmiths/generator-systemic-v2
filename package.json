{
    "name": "gs-hygen",
    "version": "1.0.3",
    "description": "Remote hygen templates generator",
    "main": "setup.ts",
    "bin": {
        "gs-hygen": "build/setup.js"
    },
    "scripts": {
        "test": "npx jest --runInBand --verbose",
        "test:debug": "DEBUG=unit:tests* npx jest --runInBand --verbose",
        "test:watch": "npm run test -- --watchAll",
        "test:watch:debug": "npm run test:watch",
        "test:coverage": "npm run test -- --coverage",
        "build": "npx tsc",
        "prepare": "npm run build",
        "start": "npm run build && node ./build/setup.js",
        "lint:fix": "eslint '*/**/*.{js,ts}' --quiet --fix"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/guidesmiths/gs-hygen.git"
    },
    "keywords": [
        "hygen",
        "generator",
        "v2"
    ],
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/guidesmiths/gs-hygen/issues"
    },
    "homepage": "https://github.com/guidesmiths/gs-hygen#readme",
    "engines": {
        "node": "14.x"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "devDependencies": {
        "@types/cli-spinner": "^0.2.0",
        "@types/fs-extra": "^9.0.11",
        "@types/inquirer": "^7.3.2",
        "@types/jest": "^26.0.23",
        "@types/lodash": "^4.14.170",
        "@types/node": "^14.17.4",
        "@types/yargs": "^16.0.3",
        "@typescript-eslint/eslint-plugin": "^4.28.0",
        "@typescript-eslint/parser": "^4.28.0",
        "debug": "^4.3.1",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "prettier": "^2.3.1",
        "ts-jest": "^26.5.6",
        "typescript": "^4.3.4"
    },
    "dependencies": {
        "@types/nodegit": "^0.26.15",
        "cli-spinner": "^0.2.10",
        "colors": "^1.4.0",
        "del": "^6.0.0",
        "execa": "^5.1.1",
        "fs-extra": "^9.1.0",
        "hygen": "^6.1.0",
        "inquirer": "^8.1.1",
        "lodash": "^4.17.21",
        "nodegit": "^0.27.0",
        "yaml": "^1.10.2",
        "yargs": "^16.2.0"
    }
}
